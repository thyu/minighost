<!--- HEADER TEMPLATE FILE --->

<!--- HEADER PLACE HOLDER - to occupy width for fixed left column  --->
<div class="header-placeholder">&nbsp;</div>

<!--- CONTNET OF HEADER --->
<div class="header-content" {{#if @blog.cover}}style="background-image: url('{{@blog.cover}}')"{{/if}}>
	
	{{#if @blog.logo}}
		<a class="logo" href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="Blog Logo" class="blog-logo" /></a>
	{{/if}}

	<!--- Title --->	
	<div class="header-title">

		<a href="{{@blog.url}}">
			<h1 class="blog-title">{{@blog.title}}</h1>
		</a>
		<h2 class="blog-description">{{@blog.description}}</h2>
		<a href="https://www.twitter.com/awhstin" title="Twitter">
			<span class="fa-stack header-menu-button-icon">
				<i class="fa fa-twitter fa-stack-1x"></i>
			</span>
		
	</a>
	<a href="https://www.linkedin.com/in/jaustinwehrwein" title="Linkedin">
			<span class="fa-stack header-menu-button-icon">
				<i class="fa fa-linkedin fa-stack-1x"></i>
			</span>
		
	</a>
	<a href="https://github.com/awhstin" title="Github">
			<span class="fa-stack header-menu-button-icon">
				<i class="fa fa-github fa-stack-1x"></i>
			</span>
		
	</a>
	<a href="https://github.com/awhstin" title="Github">
			<span class="fa-stack header-menu-button-icon">
				<i class="fa fa-angellist fa-stack-1x"></i>
			</span>
		
	</a>
	</div>
	<!--- Header Menu --->
	{{> menu}}

</div>

